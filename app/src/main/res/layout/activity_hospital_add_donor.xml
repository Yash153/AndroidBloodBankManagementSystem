<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HospitalAddDonor">

    <EditText
        android:id="@+id/etDonorName"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Donor Full Name"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/etDonorEmail"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:hint="Enter Email"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/etDonorPhone"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Mobile Number"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:inputType="phone" />

    <Spinner
        android:id="@+id/spnBloodGroup"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="7dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etBloodAmount"
        android:layout_marginTop="20dp"
        android:hint="Enter amount of blood in ml"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etDonorAadhar"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:hint="Enter Aadhar Number"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/btnAddDonor"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Add Donor" />
</LinearLayout>